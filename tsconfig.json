{
  "compilerOptions": {
    "target": "es5",  
		"lib": ["ES2015","DOM"],      
    "module": "CommonJS",
    "allowJs": true,             
    "checkJs": true,
    "noImplicitAny": false,            
    "declaration": true,  
    "outDir": "./dist",           
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["jest","node"],   
		"moduleResolution": "Node",  
		"esModuleInterop": true,   
  },
	"include": ["./lib/**/*.ts"],
	"exclude": ["node_modules","./lib/__tests__"]
}
