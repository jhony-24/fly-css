{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
			"arrow-spacing":"error",
			"no-alert":"error",
			"rest-spread-spacing" : "warn",
			"object-curly-spacing" : "warn",
			"space-before-blocks": "error",
			"no-duplicate-imports": "error",
			"no-var": "error"
    }
}
